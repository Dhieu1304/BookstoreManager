<div class="container">
    <div class="admin-container-content">

        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">Tables</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">Tables</li>
                </ol>
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        Book
                        <a class="mx-2 btn btn-secondary rounded-2" href="/table/book/add">
                            Add
                            <svg class="svg-inline--fa fa-plus" aria-hidden="true" focusable="false" data-prefix="fas"
                                 data-icon="plus" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"
                                 data-fa-i2svg="">
                                <path fill="currentColor"
                                      d="M432 256c0 17.69-14.33 32.01-32 32.01H256v144c0 17.69-14.33 31.99-32 31.99s-32-14.3-32-31.99v-144H48c-17.67 0-32-14.32-32-32.01s14.33-31.99 32-31.99H192v-144c0-17.69 14.33-32.01 32-32.01s32 14.32 32 32.01v144h144C417.7 224 432 238.3 432 256z"></path>
                            </svg>
                        </a>
                    </div>

                    <div class="card-body">
                        <table id="datatablesSimple">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>ISBN</th>
                                <th>Title</th>
                                <th>Image</th>
                                <th>Number of pages</th>
                                <th>Publication date</th>
                                <th>Publisher</th>
                                <th>Price</th>
                                <th>Category</th>
                                <th>Edit</th>
                                <!--                                <th>Remove</th>-->

                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>ISBN</th>
                                <th>Title</th>
                                <th>Image</th>
                                <th>Number of pages</th>
                                <th data-type="date" data-format="DD/MM/YYYY">Publication date</th>
                                <th>Publisher</th>
                                <th>Price</th>
                                <th>Category</th>
                                <th>Edit</th>
                                <!--                                <th>Remove</th>-->


                            </tr>
                            </tfoot>
                            <tbody id="bookTableBody">
                            {{#each books}}
                                {{#if status}}
                                    <tr id="detailBook{{id}}">


                                        <td id="bookId">{{id}}</td>
                                        <td>{{isbn}}</td>
                                        <td>{{title}}</td>
                                        <td><a href={{image.src}}><img src={{image.src}}  alt="Image" width="50dp"
                                                                       height="50dp"></a></td>
                                        <td>{{num_page}}</td>
                                        <td>{{publication_date}}</td>
                                        <td>{{publisher}}</td>
                                        <td>{{price}} VND</td>
                                        <td>{{category}}</td>
                                        <td class="text-center">
                                            <a href="/table/book/{{id}}/action">
                                                <i class="fas fa-user-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {{/if}}
                            {{/each}}

                            <script type="text/x-handlebars-template" id="tableDataTemplate">
                                \{{#each books}}
                                    \{{#if status}}
                                        <tr id="detailBook\{{id}}">


                                            <td id="bookId">\{{id}}</td>
                                            <td>\{{isbn}}</td>
                                            <td>\{{title}}</td>
                                            <td><a href=\{{image.src}}><img src=\{{image.src}}  alt="Image" width="50dp"
                                                                        height="50dp"></a></td>
                                            <td>\{{num_page}}</td>
                                            <td>\{{publication_date}}</td>
                                            <td>\{{publisher}}</td>
                                            <td>\{{price}} VND</td>
                                            <td>\{{category}}</td>
                                            <td class="text-center">
                                                <a href="/table/book/\{{id}}/action">
                                                    <i class="fas fa-user-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    \{{/if}}
                                \{{/each}}

                            </script>
                            </tbody>
                        </table>
                    </div>

                    <footer class="row justify-content-center">
                        <nav class="col-lg-3 col-md-6 col-sm-9" aria-label="Page navigation example" id="pagination">
                            {{{createPagination pagination paginationClass="pagination"}}}

                            <script type="text/x-handlebars-template" id="paginationTemplate">
                                \{{{createPagination pagination paginationClass="pagination"}}}
                            </script>
                        </nav>
                    </footer>

                </div>
            </div>
        </main>
    </div>
</div>

{{#section 'script'}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
    <script src="/js/helper/helper.js"></script>
    <script src="/js/helper/paginationHelper.js"></script>
    <script src="/js/general/pagination/pagination.js"></script>
    <script src="/js/book/book.js"></script>
{{/section}}