{{#section 'css'}}
    <link href="/stylesheets/sale.css" rel="stylesheet"/>
{{/section}}


<main class="sale-container">
    <div class="row">
        <div class="col-md-9 col-xs-12">
            Sang 1
        </div>
        <div class="mr-4 col-md-3 col-xs-12">
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <div class="py-2 px-2 form-group row align-items-center">
                        <label class="col-md-3 col-sm-3 col-xs-12">Ngày</label>
                        <div class="col-md-9 col-sm-9 col-xs-6">
                            <input class="form-control" type="date">
                        </div>
                    </div>
                    <div class="py-2 px-2 form-group row align-items-center">
                        <label class="col-md-3 col-sm-3 col-xs-12">Sđt</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <div class="input-group">
                                <input type="text" class="form-control" type="tel" required>
                                <div class="input-group-append">
                                    <button type="button" class="mx-2 btn btn-success rounded-circle">
                                        <i class="fa-solid fa-plus"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback">
                                    Vui lòng chọn số điện thoại
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="py-2 px-2 form-group row align-items-center">
                        <label class="col-md-3 col-sm-3 col-xs-12">Tên</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input class="form-control" type="text" readonly>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <div class="form-group row">
                        <label class="col-md-4 col-sm-4 col-xs-12">Đơn giá</label>
                        <div class="col-md-8 col-sm-8 col-xs-12">
                            <input type="text" class="form-control text-right" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4 col-sm-4 col-xs-12">Nợ cũ</label>
                        <div class="col-md-8 col-sm-8 col-xs-12">
                            <input type="text" class="form-control text-right" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4 col-sm-4 col-xs-12">Phải trả</label>
                        <div class="col-md-8 col-sm-8 col-xs-12">
                            <input type="text" class="form-control text-right" readonly>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>