
{{#section 'css'}}
    <link href="/stylesheets/sale.css" rel="stylesheet"/>
{{/section}}

<main class="sale-container">
    <div class="row">
        <div class="row filter">  
            <div class="col-3">
                <div class="input-group">
                    <input type="text" id="isbnIp" class="form-control" placeholder="ISBN">
                    <div class="input-group-append">
                        <button id="showBookModalBtn" type="button" class="mx-2 btn btn-primary rounded-circle" data-toggle="modal" data-target="#showBookModal">
                            <i class="fa-solid fa-plus"></i>
                        </button>
                    </div>
                    <div class="invalid-feedback">
                        Vui lòng chọn số điện thoại
                    </div>
                </div>
            </div>              
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-9 col-xs-12">
            <div class="content">             
                <table id="saleReceiptDetailTable" class="sale-receip-detail-table">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>ISBN</th>
                            <th>Tiêu đề</th>
                            <th>Số trang</th>
                            <th>Ngày NB</th>
                            <th>NXB</th>
                            <th>Tác giả</th>
                            <th>Giá</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Ảnh</th>
                            <th>ISBN</th>
                            <th>Tiêu đề</th>
                            <th>Số trang</th>
                            <th>Ngày NB</th>
                            <th>NXB</th>
                            <th>Tác giả</th>
                            <th>Giá</th>
                            <th>Xóa</th>
                        </tr>
                    </tfoot>
                    <tbody>

                    </tbody>
                </table>


            </div>
        </div>
        <div class="mr-4 col-md-3 col-xs-12">
            <div class="sale-form">
                <div class="row sale-form-top">
                    <div class="col-md-12 col-xs-12">
                        <div class="py-2 px-2 form-group row align-items-center">
                            <label class="col-md-3 col-sm-3 col-xs-12">Ngày</label>
                            <div class="col-md-9 col-sm-9 col-xs-6">
                                <input class="form-control" type="date">
                            </div>
                        </div>
                        <div class="py-2 px-2 form-group row align-items-center">
                            <label class="col-md-3 col-sm-3 col-xs-12">Sđt</label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <div class="input-group">
                                    <input type="text" class="form-control" type="tel" required>
                                    <div class="input-group-append">
                                        <button id="addNewCustomerModalBtn" type="button" class="mx-2 btn btn-success rounded-circle" data-toggle="modal" data-target="#addNewCustomerModal">
                                            <i class="fa-solid fa-plus"></i>
                                        </button>
                                    </div>
                                    <div class="invalid-feedback">
                                        Vui lòng chọn số điện thoại
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="py-2 px-2 form-group row align-items-center">
                            <label class="col-md-3 col-sm-3 col-xs-12">Tên</label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <input class="form-control" type="text" readonly>
                            </div>
                        </div>
                        <div class="py-2 px-2 form-group row align-items-center">
                            <label class="col-md-3 col-sm-3 col-xs-12">Nợ cũ</label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <input class="form-control" type="text" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row sale-form-bottom">
                    <div class="col-md-12 col-xs-12">
                        <div class="py-2 form-group row">
                            <label class="col-md-4 col-sm-4 col-xs-12">Đơn giá</label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input type="text" class="form-control text-right" readonly>
                            </div>
                        </div>
                        <div class="py-2 form-group row">
                            <label class="col-md-4 col-sm-4 col-xs-12">Thành tiền</label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input type="text" class="form-control text-right" readonly>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- Modal -->

    <div id="showBookModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title">Chọn sách</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
                <table id="showBookTable">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>ISBN</th>
                            <th>Tiêu đề</th>
                            <th>Số trang</th>
                            <th>Ngày NB</th>
                            <th>NXB</th>
                            <th>Tác giả</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Chọn</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Ảnh</th>
                            <th>ISBN</th>
                            <th>Tiêu đề</th>
                            <th>Số trang</th>
                            <th>Ngày NB</th>
                            <th>NXB</th>
                            <th>Tác giả</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Chọn</th>
                        </tr>
                    </tfoot>
                    <tbody>

                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-primary">Save changes</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
        </div>
    
    </div>

    <div id="addNewCustomerModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm khách hàng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addNewCustomerForm">
                    <div class="form-group">
                        <label class="col-form-label">Họ tên:</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Số điện thoại:</label>
                        <input type="tel" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Email:</label>
                        <input type="email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Địa chỉ:</label>
                        <input type="text" class="form-control">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
            </div>
        </div>
    
    </div>
</main>

