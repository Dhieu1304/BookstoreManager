    <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
    <script src="/js/helper/helper.js"></script>

    <script src="/js/bill/bill.js"></script>
    <script src="/js/bill/billDetailPage.js"></script>
{{/section}}