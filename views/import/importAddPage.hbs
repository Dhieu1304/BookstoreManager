
{{#section 'css'}}
    <link href="/stylesheets/import/import.css" rel="stylesheet"/>
    <link href="/stylesheets/import/importAddPage.css" rel="stylesheet"/>
{{/section}}

<main class="import-container">
    <div class="row">
        <div class="row filter">  
            <div class="col-6">
                <div class="input-group">
                    <input type="text" id="isbnIp" class="form-control" placeholder="ISBN">
                    <div class="input-group-append">
                        <button id="addImportDetailTbRowBtn" type="button" class="mx-2 btn btn-secondary rounded-2">
                            Thêm <i class="fa-solid fa-plus"></i>
                        </button>
                        <button id="showBookModalBtn" type="button" class="mx-2 btn btn-info rounded-2" data-toggle="modal" data-target="#showBookModal">
                            Danh sách <i class="fa-solid fa-list"></i>
                        </button>
                        <button id="addNewBookModalBtn" type="button" class="d-none" data-toggle="modal" data-target="#addNewBookModal">                        </button>
                    </div>
                    <div class="invalid-feedback">
                        Vui lòng chọn số điện thoại
                    </div>
                </div>
            </div>    
            <div class="col-3">
                <button type="submit" class="mx-2 btn btn-success custom-btn">
                    Lưu <i class="fa-solid fa-pen custom-btn-icon"></i>
                </button>
            </div>          
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-9 col-xs-12">
            <div class="content">             
                <table id="importReceiptDetailTable" class="import-receip-detail-table">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>ISBN
                                {{!-- <input type="text" style="width: 100%"> --}}
                            </th>
                            <th>Tiêu đề</th>
                            <th>Số trang</th>
                            <th>Ngày NB</th>
                            <th>NXB</th>
                            <th>Tác giả</th>
                            <th>Danh mục</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Ảnh</th>
                            <th>ISBN</th>
                            <th>Tiêu đề</th>
                            <th>Số trang</th>
                            <th>Ngày NB</th>
                            <th>NXB</th>
                            <th>Tác giả</th>
                            <th>Danh mục</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Xóa</th>
                        </tr>
                    </tfoot>
                    <tbody id="importDetailTableBody">
                        <script type="text/x-handlebars-template" id="importDetailTableRowTemplate">
                            <tr id="importReceiptDetailItem\{{book_id}}">
                                <input type="hidden" name="bookIds" value="\{{book_id}}">
                                <td><img class="import-book-img"  src="\{{avatar}}"></td>
                                <td>\{{book.isbn}}</td>
                                <td>\{{book.title}}</td>
                                <td>\{{book.num_page}}</td>
                                <td>\{{book.publication_date}}</td>
                                <td>\{{book.publisher.name}}</td>
                                <td> 
                                    \{{#each book.author_id_authors}}
                                        -\{{name}}<br>
                                    \{{/each}}    
                                </td>
                                <td> 
                                    \{{#each book.category_id_categories}}
                                        -\{{name}}<br>
                                    \{{/each}}    
                                </td>
                                <td><input type="number" class="import-receipt-detail-price" value="\{{price}}" name="prices" onchange="resetDafautInput(event,\{{price}})" oninput="updateTotalFinalPrice()"></td>
                                <td><input type="number" class="import-receipt-detail-quantity" value="0" name="quantitys" onchange="resetDafautInput(event,0)"></td>
                                <td>
                                    <button type="button" class="mx-2 btn btn-danger custom-btn" onclick="removeImportReceiptDetailRow(\{{book_id}})">
                                        <i class="fa-solid fa-trash custom-btn-icon"></i>
                                    </button>
                                </td>
                            </tr> 
                        
                        </script>
                    </tbody>
                </table>


            </div>
        </div>
        <div class="mr-4 col-md-3 col-xs-12">
            <div class="import-form">
                <div class="row import-form-top">
                    <div class="col-md-12 col-xs-12">
                        <div class="py-2 px-2 form-group row align-items-center">
                            <label class="col-md-4 col-sm-4 col-xs-12">Ngày</label>
                            <div class="col-md-8 col-sm-8 col-xs-6">
                                <input class="form-control" type="date" readonly id="createAt" name="createAt">
                            </div>
                        </div>
                        <div class="py-2 px-2 form-group row">
                            <label class="col-md-4 col-sm-4 col-xs-12">Đơn giá</label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input type="number" id="totalPrice" name="totalPrice" class="form-control text-right" readonly>
                            </div>
                        </div>
                        <div class="py-2 px-2 form-group row">
                            <label class="col-md-4 col-sm-4 col-xs-12">Thành tiền</label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input type="text" id="finalPrice" name="finalPrice" class="form-control text-right" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row import-form-middle">
                    <div class="col-md-12 col-xs-12">
                        <div class="py-2 px-2 form-group row align-items-center">
                            <label class="col-md-4 col-sm-4 col-xs-12">Tác giả</label>
                            <div class="col-md-8 col-sm-8 col-xs-6">
                                <input class="form-control" type="text" id="newAuthor" name="newAuthor">
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-xl-4 col-md-12">
                                <button id="addNewAuthorBtn" type="button" class="btn btn-success rounded-circle">
                                    <i class="fa-solid fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row import-form-middle">
                    <div class="col-md-12 col-xs-12">
                        <div class="py-2 px-2 form-group row align-items-center">
                            <label class="col-md-4 col-sm-4 col-xs-12">Danh mục</label>
                            <div class="col-md-8 col-sm-8 col-xs-6">
                                <input class="form-control" type="text" id="newCategory" name="newCategory">
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-xl-4 col-md-12">
                                <button id="addNewCategoryBtn" type="button" class="btn btn-success rounded-circle">
                                    <i class="fa-solid fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row import-form-middle">
                    <div class="col-md-12 col-xs-12">
                        <div class="py-2 px-2 form-group row align-items-center">
                            <label class="col-md-4 col-sm-4 col-xs-12">Nhà xuất bản</label>
                            <div class="col-md-8 col-sm-8 col-xs-6">
                                <input class="form-control" type="text" id="newPublisher" name="newPublisher">
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-xl-4 col-md-12">
                                <button id="addNewPublisherBtn" type="button" class="btn btn-success rounded-circle">
                                    <i class="fa-solid fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </form>



    <!-- Modal -->

    <div id="showBookModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title">Chọn sách</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
                <table id="showBookTable">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>ISBN</th>
                            <th>Tiêu đề</th>
                            <th>Số trang</th>
                            <th>Ngày NB</th>
                            <th>NXB</th>
                            <th>Tác giả</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Chọn</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Ảnh</th>
                            <th>ISBN</th>
                            <th>Tiêu đề</th>
                            <th>Số trang</th>
                            <th>Ngày NB</th>
                            <th>NXB</th>
                            <th>Tác giả</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Chọn</th>
                        </tr>
                    </tfoot>
                    <tbody>

                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-primary">Save changes</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
        </div>
    
    </div>

    <div id="addNewBookModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm sách mới</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addNewCustomerForm">
                    <div class="row">
                        <div class="form-group col">
                            <label class="col-form-label">ISBN:</label>
                            <input id="newBookIsbn" type="text" class="form-control">
                        </div>
                        <div class="form-group col">
                            <label class="col-form-label">Số trang:</label>
                            <input id="newBookPageNumber" type="number" class="form-control">
                        </div>
                        <div class="form-group col">
                            <label class="col-form-label">Ngày xuất bản:</label>
                            <input id="newBookPublisherDate" type="Date" class="form-control">
                      </div>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Tiêu đề:</label>
                        <input id="newBookTitle" type="text" class="form-control">
                    </div>

                    <div class="row">
                        <div class="col-xl-4 col-md-12" >
                            <div class="row">
                                <div class="col">
                                    <div class="row">
                                        <div class="form-group col">
                                            <label class="col-form-label">Tác giả</label>
                                            <div class="input-group">
                                                <input list="authorList" id="authorIp"  name="author" type="text" class="form-control">
                                                <datalist id="authorList">
                                                    {{#each authors}}
                                                        <option value="{{name}}"></option>
                                                    {{/each}}
                                                </datalist> 
                                                <div class="input-group-append">
                                                    <button id="addAuthorTbRowBtn" type="button" class="mx-2 btn btn-secondary rounded-2">
                                                        Thêm <i class="fa-solid fa-plus"></i>
                                                    </button>
                                                    <button id="addNewAuthorModalBtn" type="button" class="d-none" data-toggle="modal" data-target="#addNewAuthorModal"></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col">
                                        <table id="authorTable" class="">
                                            <thead>
                                                <tr>
                                                    <th>Author</th>
                                                    <th>Xóa</th>
                                                </tr>
                                            </thead>
                                            <tfoot>
                                                <tr>
                                                    <th>Author</th>
                                                    <th>Xóa</th>
                                                </tr>
                                            </tfoot>
                                            <tbody id="authorTableBody">
                                                <script type="text/x-handlebars-template" id="authorTableRowTemplate">
                                                    <tr id="authorItem\{{id}}">
                                                        <input type="hidden" name="authorIds" value="\{{id}}">
                                                        <td>
                                                            \{{name}}
                                                        </td>
                                                        <td>
                                                            <button type="button" class="mx-2 btn btn-danger custom-btn" onclick="removeAuthorTbRow('authorItem',\{{id}})">
                                                                <i class="fa-solid fa-trash custom-btn-icon"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                </script>
                                            </tbody>
                                        </table> 
                                    
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>

                        <div class="col-xl-4 col-md-12" >
                            <div class="row">
                                <div class="col">
                                    <div class="row">
                                        <div class="form-group col">
                                            <label class="col-form-label">Danh mục</label>
                                            <div class="input-group">
                                                <input list="categoryList" id="categoryIp"  name="category" type="text" class="form-control">
                                                <datalist id="categoryList">
                                                    {{#each categorys}}
                                                        <option value="{{name}}"></option>
                                                    {{/each}}
                                                </datalist> 
                                                <div class="input-group-append">
                                                    <button id="addCategoryTbRowBtn" type="button" class="mx-2 btn btn-secondary rounded-2">
                                                        Thêm <i class="fa-solid fa-plus"></i>
                                                    </button>
                                                    <button id="addNewCategoryModalBtn" type="button" class="d-none" data-toggle="modal" data-target="#addNewCategoryModal"></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col">
                                        <table id="categoryTable" class="">
                                            <thead>
                                                <tr>
                                                    <th>Category</th>
                                                    <th>Xóa</th>
                                                </tr>
                                            </thead>
                                            <tfoot>
                                                <tr>
                                                    <th>Category</th>
                                                    <th>Xóa</th>
                                                </tr>
                                            </tfoot>
                                            <tbody id="categoryTableBody">
                                                <script type="text/x-handlebars-template" id="categoryTableRowTemplate">
                                                    <tr id="categoryItem\{{id}}">
                                                        <input type="hidden" name="categoryIds" value="\{{id}}">
                                                        <td>
                                                            \{{name}}
                                                        </td>
                                                        <td>
                                                            <button type="button" class="mx-2 btn btn-danger custom-btn" onclick="removeCategoryTbRow('categoryItem',\{{id}})">
                                                                <i class="fa-solid fa-trash custom-btn-icon"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                </script>
                                            </tbody>
                                        </table> 
                                    
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>

                        <div class="col-xl-4 col-md-12" >
                            <div class="row">
                                <div class="col">
                                    <div class="row">
                                        <div class="form-group col">
                                            <label class="col-form-label">Nhà xuất bản</label>
                                            <div class="input-group">
                                                <input list="publisherList" id="publisherIp"  type="text" class="form-control" onchange="changePublisherId()">
                                                <datalist id="publisherList">
                                                    {{#each publishers}}
                                                        <option value="{{name}}"></option>
                                                    {{/each}}
                                                </datalist> 
                                                <input id="publisherId" name="publisherId" type="hidden" class="form-control">                    
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="addNewBookBtn" class="btn btn-primary">Save changes</button>
            </div>
            </div>
        </div>    
    </div>

    <div id="addNewAuthorModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm sách mới</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addNewAuthorModalForm">
                    <div class="form-group">
                        <label class="col-form-label">Tác giả:</label>
                        <input id="newAuthorInModal" type="text" class="form-control">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="addNewAuthorInModalBtn" class="btn btn-primary">Save changes</button>
            </div>
            </div>
        </div>    
    </div>
    

    <div id="addNewCategoryModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm danh mục mới</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addNewCategoryModalForm">
                    <div class="form-group">
                        <label class="col-form-label">Danh mục:</label>
                        <input id="newCategoryInModal" type="text" class="form-control">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="addNewCategoryInModalBtn" class="btn btn-primary">Save changes</button>
            </div>
            </div>
        </div>    
    </div>

</main>

